Nilaiakumulasi <- function(num, k,i,t,m=TRUE)
  #Keterangan
  #k: modal
  #i: bunga
  #t: tahun
  #m: bunga majemuk (opsional)
  
  #Pilihan (num)
  #1:bunga tunggal
  #2:bunga majemuk nominal
  #3:bunga majemuk kontinu
   switch(num, 
         satu = {
           bungatunggal = k*(1+i*t)
           print(bungatunggal)
         },
         dua = {
           bungamajemuknominal = k*(1+i/m)^(m*t)
           print(bungamajemuknominal)
         },
         tiga={
           bungamajemukkontinu = akumulasi3 = k*exp(i*t)
           print(bungamajemukkontinu)
         }
  )
